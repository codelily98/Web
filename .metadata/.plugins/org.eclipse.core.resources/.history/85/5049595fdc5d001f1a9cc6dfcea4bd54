<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>const</title>
</head>
<body>
<script type="text/javascript">
//Java의 Final과 같은 의미 (재할당이 안됨, 구역 단위)
	const a = 100;
	a = 250;	//250
	console.log(a)
	{
		const a = 200;
		console.log(a)	//200
		{
			const a = 300;
			console.log(a)	//300
			{
				const a = 400;
				console.log(a)	//400
			}
			console.log(a);	//300
		}
		console.log(a);	//200
	}
	console.log(a);	//100
</script>
</body>
</html>

