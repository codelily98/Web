<body>
	<div id="wrap">
		<div id="title">
			<strong>행운 복권</strong>
			<input type="button" value="번호 생성" onclick="selectNo()"/>
		</div>
		
		<div id="number" align="center">
			<div id="1"> </div>
			<div id="2"> </div>
			<div id="3"> </div>
			<div id="4"> </div>
			<div id="5"> </div>
			<div id="6"> </div>
			<div id="7"> </div>
		</div>
	</div>

<script type="text/javascript">
const randNo = () => {
	return Math.floor(Math.random() * 45 + 1);
}

const selectNo = () => {
	let noArray = [];
	
	for(let i = 0; i < 7; i++) {
		noArray[i] = randNo();
		
		if(i < 6) {
			if(noArray[i] <= 10) {
				document.getElementById(i+1).innerHTML = `<div style="background: yellow;">${noArray[i]}</div>`;
			} else if (noArray[i] > 10 && noArray[i] <= 20) {
				document.getElementById(i+1).innerHTML = `<div style="background: blue;">${noArray[i]}</div>`;
			} else if (noArray[i] > 20 && noArray[i] <= 30) {
				document.getElementById(i+1).innerHTML = `<div style="background: red;">${noArray[i]}</div>`;
			} else if (noArray[i] > 30 && noArray[i] <= 40) {
				document.getElementById(i+1).innerHTML = `<div style="background: blue;">${noArray[i]}</div>`;
			} else {
				document.getElementById(i+1).innerHTML = `<div style="background: black;">${noArray[i]}</div>`;
			}
		} else {
			document.getElementById(i+1).innerHTML = `<div style="background: gray;">${noArray[i]}</div>`
		}
		
	}
}

</script>
</body>
