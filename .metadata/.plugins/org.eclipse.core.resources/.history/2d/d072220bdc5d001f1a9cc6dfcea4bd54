<script type="text/javascript">
//Java의 전역변수와 같다.
	const a = 100;
	a = 250;	//250
	console.log(a)
	{
		const a = 200;
		console.log(a)	//200
		{
			const a = 300;
			console.log(a)	//300
			{
				const a = 400;
				console.log(a)	//400
			}
			console.log(a);	//400
		}
		console.log(a);	//400
	}
	console.log(a);	//400
</script>
